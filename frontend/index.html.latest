            background: #9966cc;
            color: #fff;
        }
        
        .bead-item.number-7 {
            background: #aaaaaa;
            color: #fff;
        }
        
        .bead-item.number-8 {
            background: #ff3333;
            color: #fff;
        }
        
        .bead-item.number-9 {
            background: #990000;
            color: #fff;
        }
        
        .bead-item.number-10 {
            background: #33cc33;
            color: #fff;
        }
        
        /* 大小單雙樣式 */
        .bead-item.big {
            background: #e74c3c;
            color: white;
        }
        
        .bead-item.small {
            background: #3498db;
            color: white;
        }
        
        .bead-item.odd {
            background: #f39c12;
            color: white;
        }
        
        .bead-item.even {
            background: #16a085;
            color: white;
        }
        
        /* 冠亞和樣式 */
        .bead-item.sum-big {
            background: #e67e22;
            color: white;
        }
        
        .bead-item.sum-small {
            background: #8e44ad;
            color: white;
        }
        
        .bead-item.sum-odd {
            background: #d35400;
            color: white;
        }
        
        .bead-item.sum-even {
            background: #27ae60;
            color: white;
        }
        
        /* 龍虎樣式 */
        .bead-item.dragon {
            background: #c0392b;
            color: white;
        }
        
        .bead-item.tiger {
            background: #2c3e50;
            color: white;
        }
        
        /* 龍虎對戰區域樣式 */
        .dragon-tiger-pair {
            margin-bottom: 15px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 8px;
            padding: 12px;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .pair-title {
            font-size: 14px;
            font-weight: bold;
            color: var(--primary-color);
            margin-bottom: 8px;
            text-align: center;
        }
        
        /* 统计摘要 */
        .road-bead-summary {
            margin-top: 20px;
            background: white;
            border: 1px solid #e5e7eb;
            border-radius: 8px;
            padding: 15px;
        }
        
        .summary-title {
            font-size: 16px;
            font-weight: bold;
            margin-bottom: 10px;
            color: #333;
        }
        
        .summary-content {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }
        
        .summary-item {
            font-size: 14px;
            color: #666;
        }
        
        .freq-item {
            display: inline-block;
            margin-right: 10px;
            padding: 2px 8px;
            background: #f0f0f0;
            border-radius: 4px;
            font-size: 12px;
        }
        
        /* 加載和無數據狀態 */
        .loading-state,
        .no-data-state {
            text-align: center;
            padding: 60px 20px;
            color: #999;
        }
        
        .loading-spinner {
            width: 40px;
            height: 40px;
            border: 4px solid #f3f3f3;
            border-top: 4px solid var(--primary-color);
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 auto 20px;
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        .no-data-icon {
            font-size: 48px;
            margin-bottom: 10px;
        }
        
        .refresh-btn {
            margin-top: 15px;
            padding: 8px 20px;
            background: var(--primary-color);
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            transition: all 0.3s;
        }
        
        .refresh-btn:hover {
            background: var(--secondary-color);
            transform: translateY(-2px);
        }
        
        /* 響應式設計 */
        @media (max-width: 768px) {
            .road-bead-modal {
                width: 100%;
                max-height: 100vh;
                border-radius: 0;
            }
            
            /* 手機端今日统计面板修復：确保1-10号码完整顯示在统计背景框內 */
            .today-stats-panel {
                padding: 15px !important;
                margin: 15px 10px !important;
            }
            
            .stats-grid {
                grid-template-columns: repeat(5, 1fr) !important;
                gap: 8px !important;
                justify-content: center !important;
                padding: 0 !important;
                margin: 0 auto !important;
                max-width: 100% !important;
            }
            
            .stat-item {
                padding: 8px 4px !important;
                margin: 0 !important;
                min-width: 60px !important;
                border-radius: 6px !important;
            }
            
            .stat-item .number {
                width: 28px !important;
                height: 28px !important;
                font-size: 12px !important;
                line-height: 28px !important;
                margin: 0 auto 4px auto !important;
            }
            
            .stat-item .count {
                font-size: 11px !important;
                margin-bottom: 2px !important;
            }
            
            .stat-item .percentage {
                font-size: 9px !important;
            }
            
            .position-buttons,
            .option-buttons {
                gap: 5px;
            }
            
            .position-btn,
            .option-btn {
                padding: 6px 12px;
                font-size: 12px;
            }
            
            .bead-cell {
                height: 60px;
            }
            
            .main-value {
                font-size: 18px;
            }
        }
        
        /* 限紅規定模態框樣式 */
        .bet-limits-modal {
            background: white;
            border-radius: 12px;
            max-width: 600px;
            width: 90%;
            max-height: 80vh;
            overflow-y: auto;
            box-shadow: 0 20px 40px rgba(0,0,0,0.3);
            animation: fadeInScale 0.3s ease-out;
        }

        .bet-limits-header {
            background: linear-gradient(135deg, #007bff, #0056b3);
            color: white;
            padding: 20px;
            border-radius: 12px 12px 0 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .bet-limits-header h3 {
            margin: 0;
            font-size: 20px;
            font-weight: 600;
        }

        .bet-limits-content {
            padding: 25px;
        }

        /* 🔥 限紅規定表格 - 使用Flexbox替代Grid，確保穩定顯示 */
        .limits-table {
            border: 1px solid #dee2e6;
            border-radius: 8px;
            overflow: hidden;
            margin-bottom: 20px;
            width: 100%;
            display: flex;
            flex-direction: column;
        }

        .table-header, .table-row {
            display: flex !important;
            width: 100% !important;
            min-width: 0 !important;
            align-items: center !important;
        }

        .table-header {
            background: #f8f9fa;
            font-weight: 600;
            color: #495057;
        }

        .table-row {
            border-bottom: 1px solid #eee;
        }

        .table-row:last-child {
            border-bottom: none;
        }

        .table-row:nth-child(even) {
            background: #f8f9fa;
        }

        .col-game, .col-max, .col-period {
            padding: 15px 10px;
            text-align: center;
            border-right: 1px solid #eee;
            min-width: 0;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .col-game {
            flex: 2;
            text-align: left;
            font-weight: 500;
            white-space: normal;
            word-wrap: break-word;
            overflow-wrap: break-word;
            padding-right: 15px;
        }

        .col-max, .col-period {
            flex: 1;
            min-width: 80px;
        }

        .col-period {
            border-right: none;
        }

        .limits-note {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
            border-left: 4px solid #007bff;
        }

        .limits-note p {
            margin: 0 0 10px 0;
            font-weight: 600;
            color: #495057;
        }

        .limits-note ul {
            margin: 0;
            padding-left: 20px;
        }

        .limits-note li {
            margin-bottom: 8px;
            color: #6c757d;
            line-height: 1.5;
        }

        /* 🔥 限紅規定表格響應式設計 - Flexbox版本 v2.2 */
        @media (max-width: 768px) {
            .bet-limits-modal {
                width: 95%;
                max-height: 90vh;
            }
            
            .col-game, .col-max, .col-period {
                padding: 12px 6px !important;
                font-size: 12px !important;
            }
            
            .col-game {
                flex: 2.2 !important;
                font-size: 13px !important;
                padding-left: 10px !important;
                padding-right: 10px !important;
            }
            
            .col-max, .col-period {
                flex: 1 !important;
                min-width: 70px !important;
                font-size: 11px !important;
            }
            
            .bet-limits-content {
                padding: 15px 10px !important;
            }
            
            .limits-note {
                padding: 15px 12px !important;
                font-size: 13px !important;
            }
            
            .limits-note li {
                font-size: 12px !important;
                margin-bottom: 6px !important;
            }
        }
        
        /* 🔥 超小螢幕額外優化 */
        @media (max-width: 480px) {
            .col-game, .col-max, .col-period {
                padding: 10px 4px !important;
                font-size: 11px !important;
            }
            
            .col-game {
                flex: 2.5 !important;
                font-size: 12px !important;
                padding-left: 8px !important;
                padding-right: 8px !important;
            }
            
            .col-max, .col-period {
                flex: 1 !important;
                min-width: 60px !important;
                font-size: 10px !important;
            }
            
            .bet-limits-header h3 {
                font-size: 16px !important;
            }
            
            .bet-limits-content {
                padding: 12px 8px !important;
            }
        }

        /* 修改密碼彈窗樣式 */
        .change-password-modal {
            background: white;
            border-radius: 12px;
            max-width: 450px;
            width: 90%;
            box-shadow: 0 20px 40px rgba(0,0,0,0.3);
            animation: fadeInScale 0.3s ease-out;
        }
        
        .change-password-header {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 20px;
            border-radius: 12px 12px 0 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .change-password-header h3 {
            margin: 0;
            font-size: 18px;
            font-weight: 600;
        }
        
        .change-password-content {
            padding: 25px;
        }
        
        .password-form .form-group {
            margin-bottom: 20px;
        }
        
        .password-form label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: #333;
            font-size: 14px;
        }
        
        .password-form input[type="password"] {
            width: 100%;
            padding: 12px;
            border: 2px solid #e1e5e9;
            border-radius: 8px;
            font-size: 14px;
            transition: border-color 0.3s ease;
            box-sizing: border-box;
        }
        
        .password-form input[type="password"]:focus {
            outline: none;
            border-color: #667eea;
        }
        
        .form-actions {
            display: flex;
            gap: 12px;
            justify-content: flex-end;
            margin-top: 25px;
        }
        
        .cancel-btn, .confirm-btn {
            padding: 10px 20px;
            border: none;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .cancel-btn {
            background: #f8f9fa;
            color: #6c757d;
            border: 1px solid #dee2e6;
        }
        
        .cancel-btn:hover {
            background: #e9ecef;
        }
        
        .confirm-btn {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            min-width: 100px;
        }
        
        .confirm-btn:hover:not(:disabled) {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }
        
        .confirm-btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        @media (max-width: 768px) {
            .change-password-modal {
                width: 95%;
                max-width: 95%;
            }
            
            .change-password-content {
                padding: 20px;
            }
            
            .form-actions {
                flex-direction: column;
                gap: 10px;
            }
            
            .cancel-btn, .confirm-btn {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <!-- 游戏主容器 -->
    <div id="app" class="container">
        <!-- 頂部導航欄 -->
        <header class="modern-navbar">
            <div class="navbar-container">
                <!-- 左側：Logo和標題 -->
                <div class="navbar-brand">
                    <h1 class="brand-title">極速赛车</h1>
                </div>
                
                <!-- 中間：用戶信息 -->
                <!-- User info section is removed from here -->
                
                <!-- 右側：功能按鈕 -->
                <div class="navbar-actions" style="margin-left: auto; display: flex; align-items: center; gap: 15px;">
                     <!-- Balance display -->
                    <div class="balance-info" style="color: white; background: rgba(255, 255, 255, 0.15); padding: 8px 15px; border-radius: 20px;">
                        <span style="font-weight: 700;">{{ formatMoney(balance) }}</span>
                    </div>
                    <!-- Hamburger menu -->
                    <div class="menu-dropdown" ref="menuContainer">
                        <button class="action-btn menu-btn" 
                                @click="toggleDropdown($event)" 
                                @touchend="toggleDropdown($event)"
                                :aria-expanded="showDropdownMenu"
                                aria-label="打開菜單">
                            <i class="fas fa-bars" style="font-size: 18px;"></i>
                        </button>
                        <div class="dropdown-panel" v-show="showDropdownMenu" style="right: 0;">
                            <!-- User info moved inside dropdown -->
                            <div class="user-section-dropdown" style="padding: 16px; border-bottom: 1px solid #eee;">
                                <div style="display: flex; align-items: center; gap: 15px;">
                                    <div class="user-avatar" style="background: linear-gradient(45deg, #ff6b6b, #ee5a24); color: white; width: 45px; height: 45px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold; font-size: 18px;">
                                        <span>{{ username.charAt(0).toUpperCase() }}</span>
                                    </div>
                                    <div class="user-details">
                                        <div class="username" style="color: #333; font-weight: 500;">{{ username }}</div>
                                        <div class="daily-profit" :class="{ 'profit-positive': dailyProfit > 0, 'profit-negative': dailyProfit < 0, 'profit-zero': dailyProfit === 0 }" style="font-size: 12px;">
                                            今日盈亏: {{ formatProfit(dailyProfit) }}
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <button class="dropdown-action" @click="showDrawHistory">
                                <span>历史开奖</span>
                            </button>
                            <button class="dropdown-action" @click="showBetRecords">
                                <span>注單记录</span>
                            </button>
                            <button class="dropdown-action" @click="showProfitRecords">
                                <span>盈亏记录</span>
                            </button>
                            <button class="dropdown-action" @click="showDragonRanking">
                                <span>長龍排行</span>
                            </button>
                            <button class="dropdown-action" @click="showThemeSelector">
                                <span>換膚主題</span>
                            </button>
                            <button class="dropdown-action" @click="showRoadBead">
                                <span>路珠走勢</span>
                            </button>
                            <button class="dropdown-action" @click="showBetLimits">
                                <span>限紅規定</span>
                            </button>
                            <button class="dropdown-action" @click="showChangePassword">
                                <span>修改密碼</span>
                            </button>

                            <div class="dropdown-divider"></div>

                            <div class="hot-bets-section" v-if="hotBets && hotBets.length > 0">
                                <div class="section-title">熱門投注</div>
                                <div class="hot-bet-list">
                                    <div
                                        v-for="(bet, index) in hotBets.slice(0, 5)"
                                        :key="index"
                                        class="hot-bet-option"
                                        @click="selectHotBet(bet)"
                                    >
                                        <span class="bet-label">{{ bet.label }}</span>
                                        <span class="hot-indicator">熱門</span>
                                    </div>
                                </div>
                            </div>
                            <div class="dropdown-divider"></div>
                            <button class="dropdown-action" @click="showGameRules">
                                <span>規則说明</span>
                            </button>
                            <button class="dropdown-action" @click="logout">
                                <span>登出</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        


        <!-- 开奖结果區域 -->
        <div class="modern-result-section">
            <div class="result-header">
                <div class="period-display">
                    <div class="period-info-row">
                        <div class="period-badges">
                            <div class="period-badge current">
                                <span class="period-number">{{ formattedCurrentPeriod }}</span>
                                <span class="period-label">期 (当前)</span>
                            </div>

                        </div>
                        <div class="controls-container">
                            <button class="draw-history-btn" @click="toggleDrawHistory">
                                開獎紀錄
                            </button>
                            <button class="draw-animation-btn-standalone" @click="toggleAnimation">
                                {{ gameStatus === 'betting' ? '赛车動畫' : '播放赛车' }}
                            </button>
                            <div class="countdown-section" :class="gameStatus">
                                <div class="countdown-inline">
                                    <span class="countdown-label">{{ gameStatus === 'betting' ? '封盤倒计时' : '开奖中' }}</span>
                                    <span class="countdown-time">{{ formatTime(countdownSeconds) }}</span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            
            <div class="results-display-new">
                <div class="results-container-new">
                    <div v-for="(number, index) in lastResults" :key="index" 
                         class="result-slot-new">
                        <div :class="['number-ball', `color-${number}`]">
                            {{ number }}
                        </div>
                        <div class="position-label-new">{{ getPositionName(index + 1) }}</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 投注選項區域 -->
        <section class="betting-tabs" :class="{ disabled: gameStatus !== 'betting' }">
            <div class="tabs">
                <div class="tab" :class="{ active: activeTab === 'combined' }" @click="activeTab = 'combined'">兩面</div>
                <div class="tab" :class="{ active: activeTab === 'quick' }" @click="activeTab = 'quick'">快速</div>
                <div class="tab" :class="{ active: activeTab === 'number1to5' }" @click="activeTab = 'number1to5'">單号1~5</div>
                <div class="tab" :class="{ active: activeTab === 'number6to10' }" @click="activeTab = 'number6to10'">單号6~10</div>
                <div class="tab" :class="{ active: activeTab === 'dragonTiger' }" @click="activeTab = 'dragonTiger'">龍虎對戰</div>
                <div class="tab" :class="{ active: activeTab === 'sumValue' }" @click="activeTab = 'sumValue'">冠亞和</div>
            </div>
            
            <!-- 兩面玩法區域 -->
            <div class="tab-content" v-if="activeTab === 'combined'">
                
                <div class="betting-group">
                    <div class="group-title">冠军</div>
                    <div class="betting-options">
                        <div class="option" :class="{ selected: isSelected('champion', 'big') }" @click="selectBet('champion', 'big')">
                            <span>大</span>
                            <span class="odds">{{ formatOdds(odds.champion.big) }}</span>
                        </div>
                        <div class="option" :class="{ selected: isSelected('champion', 'small') }" @click="selectBet('champion', 'small')">
                            <span>小</span>
                            <span class="odds">{{ formatOdds(odds.champion.small) }}</span>
                        </div>
                        <div class="option" :class="{ selected: isSelected('champion', 'odd') }" @click="selectBet('champion', 'odd')">
                            <span>單</span>
                            <span class="odds">{{ formatOdds(odds.champion.odd) }}</span>
                        </div>
                        <div class="option" :class="{ selected: isSelected('champion', 'even') }" @click="selectBet('champion', 'even')">
                            <span>雙</span>
                            <span class="odds">{{ formatOdds(odds.champion.even) }}</span>
                        </div>
                    </div>
                </div>
                
                <div class="betting-group">
                    <div class="group-title">亚军</div>
                    <div class="betting-options">
                        <div class="option" :class="{ selected: isSelected('runnerup', 'big') }" @click="selectBet('runnerup', 'big')">
                            <span>大</span>
                            <span class="odds">{{ formatOdds(odds.runnerup.big) }}</span>
                        </div>
                        <div class="option" :class="{ selected: isSelected('runnerup', 'small') }" @click="selectBet('runnerup', 'small')">
                            <span>小</span>
                            <span class="odds">{{ formatOdds(odds.runnerup.small) }}</span>
                        </div>
                        <div class="option" :class="{ selected: isSelected('runnerup', 'odd') }" @click="selectBet('runnerup', 'odd')">
                            <span>單</span>
                            <span class="odds">{{ formatOdds(odds.runnerup.odd) }}</span>
                        </div>
                        <div class="option" :class="{ selected: isSelected('runnerup', 'even') }" @click="selectBet('runnerup', 'even')">
                            <span>雙</span>
                            <span class="odds">{{ formatOdds(odds.runnerup.even) }}</span>
                        </div>
                    </div>
                </div>
                
                <div class="betting-group">
                    <div class="group-title">第三名</div>
                    <div class="betting-options">
                        <div class="option" :class="{ selected: isSelected('third', 'big') }" @click="selectBet('third', 'big')">
                            <span>大</span>
                            <span class="odds">{{ formatOdds(odds.third ? odds.third.big : 1.9) }}</span>
                        </div>
                        <div class="option" :class="{ selected: isSelected('third', 'small') }" @click="selectBet('third', 'small')">
                            <span>小</span>
                            <span class="odds">{{ formatOdds(odds.third ? odds.third.small : 1.9) }}</span>
                        </div>
                        <div class="option" :class="{ selected: isSelected('third', 'odd') }" @click="selectBet('third', 'odd')">
                            <span>單</span>
                            <span class="odds">{{ formatOdds(odds.third ? odds.third.odd : 1.9) }}</span>
                        </div>
                        <div class="option" :class="{ selected: isSelected('third', 'even') }" @click="selectBet('third', 'even')">
                            <span>雙</span>
                            <span class="odds">{{ formatOdds(odds.third ? odds.third.even : 1.9) }}</span>
                        </div>
                    </div>
                </div>
                
                <div class="betting-group">
