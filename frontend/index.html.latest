                // 檢查限紅設定是否有更新（用於即時同步代理平台的調整）
                async checkBetLimitsUpdate() {
                    if (!this.username) {
                        return; // 未登入時不檢查
                    }
                    
                    try {
                        const response = await fetch(`${this.API_BASE_URL}/api/member-betting-limits?username=${this.username}`);
                        
                        if (response.ok) {
                            const data = await response.json();
                            if (data.success && data.config) {
                                // 計算新限紅設定的雜湊值
                                const newConfigHash = this.calculateBetLimitsHash(data.config);
                                
                                // 檢查是否有變更
                                if (this.currentBetLimitsHash && this.currentBetLimitsHash !== newConfigHash) {
                                    console.log('🔄 檢測到限紅設定變更，立即更新...');
                                    
                                    // 更新限紅配置
                                    this.betLimits = {
                                        number: {
                                            maxBet: data.config.number.maxBet,
                                            periodLimit: data.config.number.periodLimit
                                        },
                                        twoSide: {
                                            maxBet: data.config.twoSide.maxBet,
                                            periodLimit: data.config.twoSide.periodLimit
                                        },
                                        sumValueSize: {
                                            maxBet: data.config.sumValueSize.maxBet,
                                            periodLimit: data.config.sumValueSize.periodLimit
                                        },
                                        sumValueOddEven: {
                                            maxBet: data.config.sumValueOddEven.maxBet,
                                            periodLimit: data.config.sumValueOddEven.periodLimit
                                        },
                                        sumValue: {
                                            maxBet: data.config.sumValue.maxBet,
                                            periodLimit: data.config.sumValue.periodLimit
                                        },
                                        dragonTiger: {
                                            maxBet: data.config.dragonTiger.maxBet,
                                            periodLimit: data.config.dragonTiger.periodLimit
                                        }
                                    };
                                    
                                    // 更新雜湊值
                                    this.currentBetLimitsHash = newConfigHash;
                                    
                                    // 重新檢查當前下注的限紅狀態
                                    this.checkBetLimits();
                                    
                                    // 顯示更新通知
                                    this.showNotification('💰 限紅設定已更新', 'success');
                                    
                                    console.log('✅ 限紅設定已即時更新:', this.betLimits);
                                } else if (!this.currentBetLimitsHash) {
                                    // 初次設定雜湊值
                                    this.currentBetLimitsHash = newConfigHash;
                                }
                            }
                        }
                    } catch (error) {
                        console.error('檢查限紅設定更新時出錯:', error);
                    }
                },
                
                // 計算限紅設定的雜湊值（用於檢測變更）
                calculateBetLimitsHash(config) {
                    const str = JSON.stringify(config);
                    let hash = 0;
                    for (let i = 0; i < str.length; i++) {
                        const char = str.charCodeAt(i);
                        hash = ((hash << 5) - hash) + char;
                        hash = hash & hash; // Convert to 32bit integer
                    }
                    return hash.toString();
                },
                
