                    const rebatePercentage = 0.041;
                    const baseOdds = {
                        big: parseFloat((1.96 * (1 - rebatePercentage)).toFixed(3)),    // 1.96 × (1-4.1%) = 1.88
                        small: parseFloat((1.96 * (1 - rebatePercentage)).toFixed(3)),
                        odd: parseFloat((1.96 * (1 - rebatePercentage)).toFixed(3)),
                        even: parseFloat((1.96 * (1 - rebatePercentage)).toFixed(3)),
                        dragon: parseFloat((1.96 * (1 - rebatePercentage)).toFixed(3)),
                        tiger: parseFloat((1.96 * (1 - rebatePercentage)).toFixed(3))
                    };
                    return baseOdds[property] || parseFloat((1.96 * (1 - rebatePercentage)).toFixed(3));
                },
                
                // 獲取快速選項賠率（支援A盤D盤動態計算）
                getQuickOptionOdds(property) {
                    // 根據使用者盤口類型動態計算賠率
                    const userMarketType = this.userMarketType || 'D';
                    
                    let rebatePercentage, baseTwoSideOdds;
                    if (userMarketType === 'A') {
                        // A盤配置：1.1%退水
                        rebatePercentage = 0.011;
                        baseTwoSideOdds = 2.0; // A盤基礎兩面賠率：2×(1-0.011)=1.978
                    } else {
                        // D盤配置：4.1%退水  
                        rebatePercentage = 0.041;
                        baseTwoSideOdds = 2.0; // D盤基礎兩面賠率：2×(1-0.041)=1.918
                    }
                    
                    // 計算實際賠率
                    const actualOdds = parseFloat((baseTwoSideOdds * (1 - rebatePercentage)).toFixed(3));
                    
                    // 對於快速選項的大小單雙，返回統一的兩面賠率
                    if (['big', 'small', 'odd', 'even'].includes(property)) {
                        return actualOdds;
                    }
                    
                    // 如果是其他屬性，返回預設值
                    return actualOdds;
                },
                getSumClass(sum) {
                    if (sum > 11) {
                        return 'big';
                    } else if (sum <= 11) {
                        return 'small';
                    }
                    return '';
                },
                getSumLabel(sum) {
                    let labels = [];
                    
                    // 大小
                    if (sum > 11) {
                        labels.push('大');
                    } else {
                        labels.push('小');
                    }
                    
                    // 單雙
                    if (sum % 2 === 1) {
                        labels.push('單');
                    } else {
                        labels.push('雙');
                    }
                    
                    return labels.join('/');
                },
                getSumValueOdds(value) {
                    return this.odds.sumValue[String(value)] || 0;
                },
                setBetAmount(amount) {
                    this.betAmount = amount;
                    // 更新所有投注項目的金额（強制更新，确保一致性）
                    this.selectedBets.forEach(bet => {
                        bet.amount = amount;
                    });
                },
                setAllBetAmount(amount) {
                    this.betAmount = amount;
                    // 设置所有投注項目的金额
                    this.selectedBets.forEach(bet => {
                        bet.amount = amount;
                    });
                },
                updateBetAmount(index, amount) {
                    // 允許空白输入（用戶正在编辑時）
                    if (amount === '' || amount === null || amount === undefined) {
                        if (this.selectedBets[index]) {
                            this.selectedBets[index].amount = '';
                        }
                        return;
                    }
                    
                    const numAmount = parseFloat(amount);
                    if (isNaN(numAmount) || numAmount < 1) {
                        // 無效输入，恢復為 1
                        if (this.selectedBets[index]) {
                            this.selectedBets[index].amount = 1;
                        }
                        return;
                    }
                    
                    if (this.selectedBets[index]) {
                        this.selectedBets[index].amount = numAmount;
                    }
                },
                handleAmountFocus(index, event) {
                    // 當用戶点击输入框時，如果值為 1，則全選以便直接覆蓋
                    if (this.selectedBets[index] && this.selectedBets[index].amount === 1) {
                        event.target.select();
                    }
                },
                handleAmountBlur(index, event) {
                    // 當用戶離開输入框時，如果為空或無效值，則設為 1
                    const value = event.target.value;
                    if (value === '' || value === null || isNaN(parseFloat(value)) || parseFloat(value) < 1) {
                        if (this.selectedBets[index]) {
                            this.selectedBets[index].amount = 1;
                        }
                    }
                },
                setAllCustomAmount() {
                    if (this.customAmount && !isNaN(this.customAmount) && this.customAmount >= 1) {
                        const amount = parseFloat(this.customAmount);
                        this.setAllBetAmount(amount);
                        this.customAmount = ''; // 清空输入框
                    } else {
                        alert('投注金额不能少於1元');
                    }
                },
                positionToKey(position) {
                    const positionMap = {
                        1: 'first',
                        2: 'second',
                        3: 'third',
                        4: 'fourth',
                        5: 'fifth'
                    };
                    return positionMap[position] || 'first';
