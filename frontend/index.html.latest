                },
                login() {
                    fetch(`${this.API_BASE_URL}/api/member/login`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            username: this.loginForm.username,
                            password: this.loginForm.password
                        })
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            sessionStorage.setItem('isLoggedIn', 'true');
                            sessionStorage.setItem('username', data.member.username);
                            sessionStorage.setItem('balance', data.member.balance);
                            sessionStorage.setItem('memberId', data.member.id);
                            this.username = data.member.username;
                            this.balance = data.member.balance;
                            this.checkLoginStatus();
                            this.showNotification('登录成功！');
                        } else {
                            this.showNotification('登录失败，请检查用戶名和密碼。');
                        }
                    })
                    .catch(error => {
                        console.error('登录失败:', error);
                        this.showNotification('登录失败，请稍後再試。');
                    });
                },
                register() {
                    fetch(`${this.API_BASE_URL}/api/register`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            username: this.registerForm.username,
                            password: this.registerForm.password,
                            confirmPassword: this.registerForm.confirmPassword
                        })
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            this.showNotification('注册成功！');
                            this.showLoginModal = true;
                            this.showRegisterModal = false;
                        } else {
                            this.showNotification('注册失败，请检查输入的资料。');
                        }
                    })
                    .catch(error => {
                        console.error('注册失败:', error);
                        this.showNotification('注册失败，请稍後再試。');
                    });
                },
                handleClickOutside(event) {
                    const menuContainer = this.$refs.menuContainer;
                    if (menuContainer && !menuContainer.contains(event.target)) {
                        this.showDropdownMenu = false;
                    }
                    
                    // 检查是否点击在籌碼容器外部
                    const chipsContainer = document.querySelector('.chips-container');
                    const chipsPopup = document.querySelector('.chips-popup');
                    if (chipsContainer && chipsPopup && 
                        !chipsContainer.contains(event.target) && 
                        !chipsPopup.contains(event.target)) {
                        this.showChips = false;
                    }
                },
                // 路珠走勢展示
                showRoadBead() {
                    this.roadBeadVisible = true;
                    // 清除舊數據，确保获取最新结果
                    this.roadBeadData = null;
                    this.roadBeadTodayStats = [];
                    this.loadRoadBeadData();
                    this.showDropdownMenu = false; // 关闭選單
                },
                
                // 载入路珠走勢數據
                loadRoadBeadData() {
                    this.roadBeadLoading = true;
                    
                    const params = new URLSearchParams({
                        position: this.selectedRoadBeadPosition,
                        type: this.roadBeadAnalysisType,
                        limit: 60 // 获取最近60期数據
                    });
                    
                    console.log(`🔄 载入路珠走勢數據: 名次=${this.selectedRoadBeadPosition}, 類型=${this.roadBeadAnalysisType}`);
                    
                    fetch(`${this.API_BASE_URL}/api/road-bead?${params}`)
                        .then(response => response.json())
                        .then(data => {
                            if (data.success && data.data) {
                                console.log(`✅ 路珠數據载入成功，获得 ${data.data.tableData ? data.data.tableData.length : 0} 行數據`);
                                // 反向排列路珠數據，确保最新期号在左上角
                                if (data.data.tableData && Array.isArray(data.data.tableData)) {
                                    data.data.tableData = data.data.tableData.map(row => {
                                        if (Array.isArray(row)) {
                                            return row.reverse(); // 反向每一行
                                        }
                                        return row;
                                    }).reverse(); // 反向整個表格
                                    
                                    // 調試：顯示最新的3個期号
                                    const latestCells = [];
                                    for (let i = 0; i < Math.min(3, data.data.tableData.length); i++) {
                                        for (let j = 0; j < data.data.tableData[i].length; j++) {
                                            if (data.data.tableData[i][j]) {
                                                latestCells.push(data.data.tableData[i][j].period);
                                                if (latestCells.length >= 3) break;
                                            }
                                        }
                                        if (latestCells.length >= 3) break;
                                    }
                                    console.log(`📊 路珠最新期号:`, latestCells);
                                }
                                this.roadBeadData = data.data;
                                this.roadBeadTodayStats = data.data.todayStats || [];
                            } else {
                                console.log('⚠️ 路珠數據為空或格式错误:', data);
                                this.roadBeadData = null;
                                this.roadBeadTodayStats = [];
                            }
                        })
                        .catch(error => {
                            console.error('载入路珠走勢失败:', error);
                            this.roadBeadData = null;
                            this.roadBeadTodayStats = [];
                        })
                        .finally(() => {
                            this.roadBeadLoading = false;
                        });
                },
                
                // 选择路珠名次
                selectRoadBeadPosition(position) {
                    this.selectedRoadBeadPosition = position;
                    this.loadRoadBeadData();
                },
                
                // 获取路珠分析標題
                getRoadBeadAnalysisTitle() {
                    const titles = {
                        'number': '号码走勢',
                        'size': '大小走勢',
                        'parity': '單雙走勢',
                        'sum': '冠亞和值',
                        'sumSize': '冠亞和大小',
                        'sumParity': '冠亞和單雙',
                        'dragonTiger': '龍虎走勢'
                    };
                    return titles[this.roadBeadAnalysisType] || '';
                },
                
                // 获取路珠單元格樣式類
                getRoadBeadCellClass(cell) {
                    if (!cell) return '';
                    
                    const classes = [];
                    
                    // 根據分析類型添加不同的樣式
                    switch (this.roadBeadAnalysisType) {
                        case 'number':
                            classes.push(`number-${cell.number}`);
                            break;
                        case 'size':
                            classes.push(cell.isBig ? 'big' : 'small');
                            break;
                        case 'parity':
                            classes.push(cell.isOdd ? 'odd' : 'even');
                            break;
                        case 'sum':
                            if (cell.sum) {
                                classes.push(`sum-${cell.sum}`);
                            }
                            break;
                        case 'sumSize':
                            if (cell.sumBig !== undefined) {
                                classes.push(cell.sumBig ? 'sum-big' : 'sum-small');
                            }
                            break;
                        case 'sumParity':
                            if (cell.sumOdd !== undefined) {
                                classes.push(cell.sumOdd ? 'sum-odd' : 'sum-even');
                            }
                            break;
                        case 'dragonTiger':
                            if (cell.dragonTiger) {
                                classes.push(cell.dragonTiger);
                            }
                            break;
                    }
                    
                    return classes.join(' ');
                },
                
                // 获取路珠單元格顯示值
                getRoadBeadCellValue(cell) {
                    if (!cell) return '';
                    
                    switch (this.roadBeadAnalysisType) {
                        case 'number':
                            return cell.number;
                        case 'size':
                            return cell.isBig ? '大' : '小';
                        case 'parity':
                            return cell.isOdd ? '單' : '雙';
                        case 'sum':
                            return cell.sum || '-';
                        case 'sumSize':
                            return cell.sumBig !== undefined ? (cell.sumBig ? '大' : '小') : '-';
                        case 'sumParity':
                            return cell.sumOdd !== undefined ? (cell.sumOdd ? '單' : '雙') : '-';
                        case 'dragonTiger':
                            return cell.dragonTiger === 'dragon' ? '龍' : 
                                   cell.dragonTiger === 'tiger' ? '虎' : '-';
                        default:
                            return '';
                    }
                },
                
                // 获取路珠額外信息
                getRoadBeadExtraInfo(cell) {
                    if (!cell) return '';
                    
                    // 移除号码分析的大小單雙顯示，避免重複
                    // 因為已经有專門的大小走勢和單雙走勢分析
                    
                    // 移除冠亞和分析的和值顯示，避免重複
                    // 因為主要值已经顯示了具體數字
                    
                    // 只在特殊情況下顯示額外信息
                    return '';
                },
                
                // 改變路珠分析類型
                changeRoadBeadAnalysisType(type) {
                    this.roadBeadAnalysisType = type;
                    this.loadRoadBeadData();
                },
                
                showBetSlip(betType, choice, odds) {
                    // Implement the logic to show the bet slip for the selected bet
                    console.log(`Showing bet slip for ${betType}: ${choice} with odds: ${odds}`);
                },
            },
            mounted() {
                this.initCountdown();
                this.updateGameData();
                this.fetchHotBets();  // 加載熱門投注數據
                
                // 每隔5秒刷新一次游戏數據
                setInterval(() => {
                    this.updateGameData();
                    // 如果路珠走勢彈窗是开启的，也更新路珠數據
                    if (this.roadBeadVisible) {
                        this.loadRoadBeadData();
                    }
                }, 5000);
                
                // 每隔30秒刷新一次余额
                setInterval(() => {
                    if (this.isLoggedIn) {
                        this.updateBalance();
                    }
                }, 30000);
                
                // 每隔60秒刷新一次注單历史
                setInterval(() => {
                    if (this.isLoggedIn) {
                        this.updateBetHistory();
                    }
                }, 60000);
                
                // 每隔1分鐘檢查日期變化，如果是新的一天則清空注單記錄
                setInterval(() => {
                    this.checkDateChange();
                }, 60000);
                
                // 每隔5分鐘刷新一次熱門投注數據
                setInterval(() => {
                    this.fetchHotBets();
                }, 5 * 60 * 1000);
                
                // 初始检查登录狀態
                this.checkLoginStatus();
                
                // 更新初始資料（已在checkLoginStatus中呼叫updateDailyProfit）
                this.updateHistoryRecords();
            },
            beforeDestroy() {
                if (this.socket) {
                    this.socket.disconnect();
                }
                document.removeEventListener('click', this.handleClickOutside);
            },
            watch: {
                showDropdownMenu(isOpen) {
                    if (isOpen) {
                        // Use timeout to prevent the click that opens the menu from immediately closing it.
                        setTimeout(() => {
                            document.addEventListener('click', this.handleClickOutside);
                        }, 0);
                    } else {
                        document.removeEventListener('click', this.handleClickOutside);
                    }
                },
                showChips(isOpen) {
                    if (isOpen) {
                        setTimeout(() => {
                            document.addEventListener('click', this.handleClickOutside);
                        }, 0);
                    } else {
                        if (!this.showDropdownMenu) {
                            document.removeEventListener('click', this.handleClickOutside);
                        }
                    }
                },
                // 監聽投注金額變化，檢查限紅
                betAmount() {
                    this.checkBetLimits();
                },
                // 監聽選中投注項目變化，檢查限紅
                selectedBets() {
                    this.checkBetLimits();
                }
            },
        });
    </script>
