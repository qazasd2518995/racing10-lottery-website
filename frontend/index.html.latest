    <script>
        // 登录检查处理
        document.addEventListener('DOMContentLoaded', async function() {
            // 防止無限重定向
            if (window.location.pathname.endsWith('login.html') && sessionStorage.getItem('isLoggedIn') === 'true') {
                window.location.href = 'index.html';
                return;
            }

            const isLoggedIn = sessionStorage.getItem('isLoggedIn');
            if (!isLoggedIn || isLoggedIn !== 'true') {
                // 重定向到登录頁面
                window.location.href = 'login.html';
                return;
            }
            
            // 检查是否有必要的登录资讯
            const username = sessionStorage.getItem('username');
            
            if (!username) {
                // 登录资讯不完整，重新登录
                sessionStorage.clear();
                window.location.href = 'login.html';
                return;
            }

            // 會話驗證改為非阻塞式，避免网络問題造成無限重定向
            try {
                const sessionToken = sessionStorage.getItem('sessionToken');
                const headers = {
                    'Authorization': `Bearer ${sessionStorage.getItem('token') || ''}`
                };
                
                // 如果有新的會話token，使用它
                if (sessionToken) {
                    headers['X-Session-Token'] = sessionToken;
                }
                
                const response = await fetch('/api/member/check-session', {
                    method: 'GET',
                    credentials: 'include',
                    headers: headers
                });

                if (!response.ok) {
                    console.warn('Session validation failed, but continuing...');
                    // 不立即清除登录狀態，讓用戶继续使用
                } else {
                    const result = await response.json();
                    if (!result.isAuthenticated && result.reason === 'session_invalid') {
                        console.warn('⚠️ 检测到會話已失效，可能在其他裝置登录');
                        // 可以选择立即跳轉到登录頁面或顯示警告
                        if (confirm('您的账号已在其他裝置登录，请重新登录。')) {
                            sessionStorage.clear();
                            window.location.href = 'login.html';
                            return;
                        }
                    }
                }
            } catch (error) {
                console.warn('Session validation error:', error);
                // 网络错误時不清除登录狀態，讓用戶继续使用
            }
        });
    </script>
