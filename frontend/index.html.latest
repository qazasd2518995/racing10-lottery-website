            },
            computed: {
                countdownDisplay() {
                    const minutes = Math.floor(this.countdownSeconds / 60);
                    const seconds = this.countdownSeconds % 60;
                    return `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                },
                isMobile() {
                    return /Mobi|Android/i.test(navigator.userAgent);
                },
                formattedCurrentPeriod() {
                    // 格式化期号顯示，确保顯示完整期号
                    if (!this.currentPeriod) return '';
                    const period = this.currentPeriod.toString();
                    // 如果期号以數字日期開頭且長度大於11位，可能是错误格式，只取後8位
                    if (period.length > 11 && /^\d{8}/.test(period)) {
                        return period.slice(-8);
                    }
                    // 否則顯示完整期号
                    return period;
                }
            },
            methods: {
                // 初始化倒计时功能
                initCountdown() {
                    // 每秒更新倒计时
                    this.countdownTimer = setInterval(() => {
                        if (this.countdownSeconds > 0) {
                            this.countdownSeconds--;
                            this.updateCountdownDisplay();
                        }
                    }, 1000);
                    
                    // 检查登錄狀態
                    this.checkLoginStatus();
                    
                    // 更新初始資料（已在checkLoginStatus中呼叫updateDailyProfit）
                    this.updateHistoryRecords();
                    
                    // 立即更新一次游戏數據以获取最新狀態
                    this.updateGameData();
                },
                
                formatMoney(amount) {
                    if (amount === null || amount === undefined) {
                        return '$0';
                    }
                    const formattedAmount = amount.toLocaleString('zh-CN', {
                        minimumFractionDigits: 0,
                        maximumFractionDigits: 0
                    });
                    return `$${formattedAmount}`;
                },
                
                // 格式化盈亏金额，顯示+/-符号和小數
                formatProfit(amount) {
                    if (amount === null || amount === undefined || amount === 0) {
                        return '$0.00';
                    }
                    
                    const formattedAmount = Math.abs(amount).toLocaleString('zh-CN', {
                        minimumFractionDigits: 2,
                        maximumFractionDigits: 2
                    });
                    
                    if (amount > 0) {
                        return `+$${formattedAmount}`;
                    } else {
                        return `-$${formattedAmount}`;
                    }
                },
                formatTime(seconds) {
                    const mins = Math.floor(seconds / 60);
                    const secs = seconds % 60;
                    return `${mins.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
                },
                // 格式化历史开奖时间為 HH:MM:SS 格式
                formatHistoryTime(dateStr) {
                    if (!dateStr) return 'NaN:NaN:NaN';
                    const date = new Date(dateStr);
                    if (isNaN(date.getTime())) return 'NaN:NaN:NaN';
                    return `${date.getHours().toString().padStart(2, '0')}:${date.getMinutes().toString().padStart(2, '0')}:${date.getSeconds().toString().padStart(2, '0')}`;
                },
                formatOdds(odds) {
                    if (odds === undefined || odds === null) {
                        return "0.00";
                    }
                    return odds.toFixed(2);
                },
                getPositionName(position) {
                    const names = ['冠', '亞', '三', '四', '五', '六', '七', '八', '九', '十'];
                    return names[position - 1] || position;
                },
                isSelected(betType, value, position = null) {
                    return this.selectedBets.some(bet => 
                        bet.type === betType && 
                        bet.value === value && 
                        bet.position === position
                    );
                },
                selectBet(betType, value, position = null) {
                    // 检查游戏狀態：只有在betting狀態下才能选择下注
                    if (this.gameStatus !== 'betting') {
                        console.log('⚠️ 当前非下注时间，無法选择投注');
                        return;
                    }
                    
                    const bet = {
                        type: betType,
                        value: value,
                        position: position,
                        amount: 0 // 不立即设置金额，在确认時才设置
                    };

                    const existingBetIndex = this.selectedBets.findIndex(b => 
                        b.type === betType && 
                        b.value === value && 
                        b.position === position
                    );

                    if (existingBetIndex === -1) {
                        this.selectedBets.push(bet);
                    } else {
                        this.selectedBets.splice(existingBetIndex, 1);
                    }
                },
                
                // 判斷一個選項是否為熱門投注
                isHotBet(betType, value, position = null) {
                    if (!this.hotBets || this.hotBets.length === 0) return false;
                    
                    return this.hotBets.some(bet => 
                        bet.betType === betType && 
                        bet.betValue === value && 
                        (position === null || bet.position === position)
                    );
                },
                checkLoginStatus() {
                    const isLoggedIn = sessionStorage.getItem('isLoggedIn') === 'true';
                    const username = sessionStorage.getItem('username');
                    const memberId = sessionStorage.getItem('memberId');
                    
                    if (isLoggedIn && username && memberId) {
                        this.username = username;
                        // 确保初始化時就转换為數字類型
                        this.balance = parseFloat(sessionStorage.getItem('balance') || '0');
                        this.isLoggedIn = true;
                        
                        // 直接從API获取最新余额，确保與伺服器同步
                        this.updateBalance();
                        
                        // 获取今日盈亏
                        this.updateDailyProfit();
                        
                        // 获取用户盘口类型并更新赔率
                        this.getUserMarketType();
                        
                        // 載入會員限紅設定
                        this.loadMemberBettingLimits();
                        
                        // 啟動會話監控
                        if (typeof window.startSessionMonitoring === 'function') {
                            window.startSessionMonitoring();
                        }
                        
                        // 限紅設定會通過遊戲數據更新自動同步，無需手動監聽器
                    } else {
                        // 登录资讯不完整，重定向到登录頁面
                        sessionStorage.clear();
                        window.location.href = 'login.html';
                    }
                },
                
                // 根據後端數據更新賠率顯示
                updateOddsFromServer(oddsData) {
                    try {
                        // 根據後端賠率數據確定盤口類型
                        const numberOdds = oddsData.number.first;
                        const twoSideOdds = oddsData.champion.big;
                        
                        // 判斷盤口類型：A盤(9.89/1.9) 或 D盤(9.59/1.88)
                        let detectedMarketType = 'D'; // 默認D盤
                        if (numberOdds >= 9.85 && twoSideOdds >= 1.89) {
                            detectedMarketType = 'A';
                        }
                        
                        // 如果檢測到的盤口類型與當前不一致，進行更新
                        if (this.userMarketType !== detectedMarketType) {
                            console.log(`🔄 檢測到盤口類型變更: ${this.userMarketType} → ${detectedMarketType}`);
                            this.userMarketType = detectedMarketType;
                        }
                        
                        // 同步更新Vue實例中的odds對象
                        this.odds = { ...oddsData };
                        
                        // 更新DOM顯示
                        document.querySelectorAll('.odds[data-bet-type="number"]').forEach(elem => {
                            elem.textContent = numberOdds;
                        });
                        
                        // 更新兩面賠率顯示
                        document.querySelectorAll('.odds[data-bet-type="champion"][data-bet-value*="big"], .odds[data-bet-type="champion"][data-bet-value*="small"], .odds[data-bet-type="champion"][data-bet-value*="odd"], .odds[data-bet-type="champion"][data-bet-value*="even"]').forEach(elem => {
                            elem.textContent = twoSideOdds;
                        });
                        
                        // 更新龍虎賠率顯示
                        const dragonTigerOdds = oddsData.dragonTiger;
                        document.querySelectorAll('.odds[data-bet-type="dragonTiger"]').forEach(elem => {
                            elem.textContent = dragonTigerOdds;
                        });
                        
                        // 更新所有位置的兩面賠率
                        ['runnerup', 'third', 'fourth', 'fifth', 'sixth', 'seventh', 'eighth', 'ninth', 'tenth'].forEach(position => {
                            if (oddsData[position]) {
                                const positionOdds = oddsData[position].big;
                                document.querySelectorAll(`.odds[data-bet-type="${position}"][data-bet-value*="big"], .odds[data-bet-type="${position}"][data-bet-value*="small"], .odds[data-bet-type="${position}"][data-bet-value*="odd"], .odds[data-bet-type="${position}"][data-bet-value*="even"]`).forEach(elem => {
                                    elem.textContent = positionOdds;
                                });
                            }
                        });
                        
                        // 更新冠亚和值賠率
                        if (oddsData.sumValue) {
                            // 更新大小單雙
                            ['big', 'small', 'odd', 'even'].forEach(type => {
                                const sumOdds = oddsData.sumValue[type];
                                document.querySelectorAll(`.odds[data-bet-type="sumValue"][data-bet-value="${type}"]`).forEach(elem => {
                                    elem.textContent = sumOdds;
                                });
                            });
                            
                            // 更新具體和值
                            for (let i = 3; i <= 19; i++) {
                                if (oddsData.sumValue[i.toString()]) {
                                    const sumOdds = oddsData.sumValue[i.toString()];
                                    document.querySelectorAll(`.odds[data-bet-type="sumValue"][data-bet-value="${i}"]`).forEach(elem => {
                                        elem.textContent = sumOdds;
                                    });
                                }
                            }
                        }
                        
                        console.log('前端賠率顯示已更新:', {
                            盤口類型: detectedMarketType,
                            單號: numberOdds,
                            兩面: twoSideOdds,
                            龍虎: dragonTigerOdds
                        });
                        
                        // 強制Vue重新渲染以確保數據同步
                        this.$forceUpdate();
                        
                    } catch (error) {
                        console.error('更新賠率顯示失敗:', error);
                    }
                },
                
                // 获取用户盘口类型 - 已整合到updateGameData中，不再需要單獨調用
                getUserMarketType() {
                    console.log('盤口類型獲取已整合到updateGameData()中，跳過單獨調用');
                    // 不再執行任何操作，盤口類型由updateGameData()統一處理
                    return Promise.resolve();
                },
                
